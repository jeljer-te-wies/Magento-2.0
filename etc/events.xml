<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <!-- All event observers -->
    <event name="catalog_product_load_after">
        <observer name="reload_seo" instance="\Reload\Seo\Observer\CatalogProductLoadAfter"/>
    </event>
    <event name="catalog_category_load_after">
        <observer name="reload_seo" instance="\Reload\Seo\Observer\CatalogCategoryLoadAfter"/>
    </event>
    <event name="catalog_product_delete_after">
        <observer name="reload_seo" instance="\Reload\Seo\Observer\CatalogProductDeleteAfter"/>
    </event>
    <event name="catalog_category_delete_after">
        <observer name="reload_seo" instance="\Reload\Seo\Observer\CatalogCategoryDeleteAfter"/>
    </event>
    <event name="catalog_product_save_after">
        <observer name="reload_seo" instance="\Reload\Seo\Observer\CatalogProductSaveAfter"/>
    </event>
    <event name="catalog_category_save_after">
        <observer name="reload_seo" instance="\Reload\Seo\Observer\CatalogCategorySaveAfter"/>
    </event>
    <event name="core_block_abstract_prepare_layout_after">
        <observer name="reload_seo" instance="\Reload\Seo\Observer\PrepareLayoutAfter"/>
    </event>
    <event name="catalog_product_collection_load_before">
        <observer name="reload_seo" instance="\Reload\Seo\Observer\CatalogProductCollectionLoadBefore"/>
    </event>
    <event name="adminhtml_catalog_product_grid_prepare_massaction">
        <observer name="reload_seo" instance="\Reload\Seo\Observer\PrepareProductGridMassactions"/>
    </event>
</config>
